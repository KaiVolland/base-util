{
  "name": "@terrestris/base-util",
  "version": "0.1.3",
  "description": "A set of helper classes for working with strings, objects, etc.",
  "module": "src/index.js",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "clean:dist": "rimraf ./dist/*",
    "clean:docs": "rimraf build/docs",
    "lint:docs": "documentation lint src/index.js",
    "lint:src": "eslint --ext js src/",
    "lint": "tslint --project tsconfig.json --config tslint.json && tsc --noEmit --project tsconfig.json",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "test:watch": "jest --watchAll",
    "start:docs": "documentation serve -w -g src/index.js",
    "build:docs": "npm run clean:docs && documentation build -g -f html -o build/docs src/index.js",
    "build:docs-md": "documentation readme src/index.js --section=\"API Documentation\"",
    "build:dist": "tsc -p ./",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run build:dist",
    "deploy": "NODE_DEBUG=gh-pages node tasks/update-gh-pages.js",
    "release": "np --no-yarn && git push https://github.com/terrestris/base-util.git master --tags && npm run build:docs && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terrestris/base-util.git"
  },
  "author": "terrestris GmbH & Co. KG <info@terrestris.de>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/terrestris/base-util/issues"
  },
  "homepage": "https://github.com/terrestris/base-util#readme",
  "dependencies": {
    "lodash": "4.17.11",
    "loglevel": "1.6.1",
    "query-string": "5.1.1",
    "url-parse": "1.4.4",
    "validator": "10.10.0"
  },
  "devDependencies": {
    "@types/jest": "23.3.12",
    "@types/lodash": "4.14.119",
    "@types/loglevel": "1.5.3",
    "@types/query-string": "6.2.0",
    "@types/url-parse": "1.4.2",
    "@types/validator": "10.9.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-0": "6.24.1",
    "coveralls": "3.0.2",
    "documentation": "9.1.1",
    "eslint": "5.12.0",
    "gh-pages": "2.0.1",
    "jest": "23.6.0",
    "np": "3.1.0",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "tslint": "5.12.0",
    "typescript": "3.2.2",
    "whatwg-fetch": "3.0.0"
  },
  "greenkeeper": {
    "ignore": [
      "query-string"
    ]
  }
}
